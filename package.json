{
  "name": "carsnipe",
  "version": "0.1.0",
  "main": "main.js",
  "description": "Carsnipe - Your application description here",
  "author": "Your Name",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "@aws-amplify/ui-react": "^6.5.2",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "animejs": "^3.2.2",
    "antd": "^5.21.2",
    "aws-amplify": "^6.6.4",
    "react": "^18.3.1",
    "react-device-detect": "^2.2.3",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "react-scripts": "5.0.1",
    "react-slot-machine": "github:thomasrutzer/react-slot-machine#v1.0.3",
    "react-slot-machine-gen": "^1.3.3",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "NODE_ENV=development electron .",
    "package": "electron-packager . carsnipe --platform=win32 --arch=x64 --out=dist",
    "package-mac": "electron-builder --mac --x64",
    "package-win": "electron-builder --win --x64",
    "package-linux": "electron-builder --linux AppImage --x64"
  },
  "build": {
    "appId": "com.yourapp.carsnipe",
    "productName": "Carsnipe",
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "win": {
      "target": "nsis",
      "icon": "build/appIcon.ico"
    },
    "nsis": {
      "include": "resources/installer.nsh",
      "license": "resources/license.txt",
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/installer-icon.ico",
      "uninstallerIcon": "build/uninstaller-icon.ico",
      "shortcutName": "Carsnipe"
    },
    "directories": {
      "output": "dist"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/preset-react": "^7.25.7",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^23.6.0",
    "electron-packager": "^17.1.0"
  }
}